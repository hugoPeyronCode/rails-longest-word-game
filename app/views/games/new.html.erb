<div class="container text-center mt-10">
  <h1>New Game</h1>


  <ul class="list-group-horizontal">
    <% @grid.each do |letter| %>
      <li class="btn btn-dark"><%= letter %></li>
    <% end %>
  </ul>

  <form action="/score", method="POST", data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid.join(",") %>
    <%= hidden_field_tag :start_time, Time.now %>
    <p>What's the longest word you can find?</p>
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="answer" placeholder="Your answer" aria-label="Recipient's username" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Play</button>
      </div>
    </div>
  </form>
  <button onclick="location.reload();" class="btn btn-primary">New Game</button>
</div>
